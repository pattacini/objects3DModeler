<application>
<name>Tariq Acquisition Experiment</name>

        <dependencies>
                <port>/icub/camcalib/left/out</port>
                <port>/icub/camcalib/right/out</port>
                <port>/icub/left_arm/state:o</port>
                <port>/icub/right_arm/state:o</port>
                <port>/icub/torso/state:o</port>
                <port>/icub/head/state:o</port>
                <port>/icub/inertial</port>
                <port>/icub/cartesianController/left_arm/state:o</port>
                <port>/icub/cartesianController/right_arm/state:o</port>
        </dependencies>
      
        <module>
                <name>dataDumper</name>
                <parameters>--name /tariq/img/left --type image --txTime --rxTime</parameters>
                <node>localhost</node>
                <tag>imgleftLogger</tag>
        </module>

        <module>
                <name>dataDumper</name>
                <parameters>--name /tariq/img/right --type image --txTime --rxTime</parameters>
                <node>localhost</node>
                <tag>imgrightLogger</tag>
        </module>

        <module>
                <name>dataDumper</name>
                <parameters>--name /tariq/left_arm --txTime --rxTime</parameters>
                <node>localhost</node>
                <tag>leftarmLogger</tag>
        </module>


        <module>
                <name>dataDumper</name>
                <parameters>--name /tariq/right_arm --txTime --rxTime</parameters>
                <node>localhost</node>
                <tag>rightarmLogger</tag>
        </module>

        <module>
                <name>dataDumper</name>
                <parameters>--name /tariq/torso --txTime --rxTime</parameters>
                <node>localhost</node>
                <tag>torsoLogger</tag>
        </module>

        <module>
                <name>dataDumper</name>
                <parameters>--name /tariq/head --txTime --rxTime</parameters>
                <node>localhost</node>
                <tag>headLogger</tag>
        </module>

        <module>
                <name>dataDumper</name>
                <parameters>--name /tariq/inertial --txTime --rxTime</parameters>
                <node>localhost</node>
                <tag>inertialLogger</tag>
        </module>

        <module>
                <name>dataDumper</name>
                <parameters>--name /tariq/cartesian/left --txTime --rxTime</parameters>
                <node>localhost</node>
                <tag>leftcartesianLogger</tag>
        </module>

        <module>
                <name>dataDumper</name>
                <parameters>--name /tariq/cartesian/right --txTime --rxTime</parameters>
                <node>localhost</node>
                <tag>rightcartesianLogger</tag>
        </module>

        <connection>
                <from>/icub/camcalib/left/out</from>
                <to>/tariq/img/left</to>
                <protocol>tcp</protocol>
        </connection>
        <connection>
                <from>/icub/camcalib/right/out</from>
                <to>/tariq/img/right</to>
                <protocol>tcp</protocol>
        </connection>
        <connection>
                <from>/icub/left_arm/state:o</from>
                <to>/tariq/left_arm</to>
                <protocol>tcp</protocol>
        </connection>
        <connection>
                <from>/icub/right_arm/state:o</from>
                <to>/tariq/right_arm</to>
                <protocol>tcp</protocol>
        </connection>
        <connection>
                <from>/icub/torso/state:o</from>
                <to>/tariq/torso</to>
                <protocol>tcp</protocol>
        </connection>
        <connection>
                <from>/icub/head/state:o</from>
                <to>/tariq/head</to>
                <protocol>tcp</protocol>
        </connection>
        <connection>
                <from>/icub/inertial</from>
                <to>/tariq/inertial</to>
                <protocol>tcp</protocol>
        </connection>
        <connection>
                <from>/icub/cartesianController/left_arm/state:o</from>
                <to>/tariq/cartesian/left</to>
                <protocol>tcp</protocol>
        </connection>
        <connection>
                <from>/icub/cartesianController/right_arm/state:o</from>
                <to>/tariq/cartesian/right</to>
                <protocol>tcp</protocol>
        </connection>
</application>

